@{
    ViewBag.Title = " - Products";

    string name;
    decimal price;
    string related;
    string category;
}

<header class="jumbotron">
    <h1>Products View</h1>
</header>
<section class="flex-container">
    @foreach (Product item in Model)
    {
        name = item?.Name ?? "No Product";
        category = item?.Category ?? "None";
        price = item?.Price ?? 0;
        related = item?.RelatedProduct?.Name ?? "None";

        <div class="flex-item">

            <h2>@name</h2>
            <hr />
            <p>
                @string.Format("Category: {0}", category)<br />
                @string.Format("Price: {0:c}", price) <br />
                @string.Format("Related: {0}", related)
            </p>

        </div>

    }
</section>

